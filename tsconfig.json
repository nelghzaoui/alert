{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@core/*": ["app/common/core/*"],
      "@account/*": ["app/common/features/account/*"],
      "@alert/*": ["app/common/features/alert/*"],
      "@security/*": ["app/common/features/security/*"],
      "@server/*": ["app/common/features/server/*"],
      "@shared/*": ["app/common/shared/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
