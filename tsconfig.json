{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@environments/*": ["src/environments/*"],
      "@core/*": ["src/app/modules/core/*"],
      "@shared/*": ["src/app/modules/shared/*"],
      "@account/*": ["src/app/modules/features/account/*"],
      "@alert/*": ["src/app/modules/features/alert/*"],
      "@security/*": ["src/app/modules/features/security/*"],
      "@server/*": ["src/app/modules/features/server/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018","dom","esnext.asynciterable"],
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}